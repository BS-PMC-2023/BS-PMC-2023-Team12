pipeline{
    agent{
        docker{
            image 'node:lts-buster-slim'
            args '-p 5000:5000'
        }
    }
    environment{
        CI='true'
    }
    stages{
        stage('Node.js builed') {
            steps {
                sh 'cd backend && npm install'
            }
        }
        
        stage('React builed') {
            steps {
                 sh 'cd frontend && npm install'
            }
        }

        stage('tests') {
            steps {
                sh 'cd frontend && npm run test'
            }
        }
        
        stage('Deploy to Render') {
            steps {
                sh 'npm install -g render-cli'  // Install Render CLI if not already installed
                withCredentials([usernamePassword(credentialsId: 'render-credentials', usernameVariable: 'edenba2@ac.sce.ac.il', passwordVariable: 'edenba2sce')]) {
                    sh 'render login --username $RENDER_USERNAME --password $RENDER_PASSWORD'  // Authenticate with Render
                    sh 'npm install'  // Install dependencies
                    sh 'npm run build'  // Build the server
                    sh 'render deploy --config render.yaml'  // Deploy the server using the Render CLI and configuration file
                }
            }
        }

    }
}
