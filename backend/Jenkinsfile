pipeline{
    agent{
        docker{
            image 'node:lts-buster-slim'
            args '-p 5000:5000'
        }
    }
    environment{
        CI='true'
    }
    stages{
        stage('build'){
            steps{
                sh "cd backend"
                sh "npm install"
            }
        }
        stage('test'){
            steps{
                sh "cd .."
                sh "ls"
                sh "cd frontend"
                sh "ls"
                sh "npm run test"
            }
        }
    }
}
